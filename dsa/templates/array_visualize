<body>

    <div class="container">
        <a href="{% url 'datastructures' %}" class="back-button">Back to Data Structures</a>

        <h2>Array Visualizer</h2>

        <div class="array-container" id="arrayContainer"></div>

        <div class="controls">
            <input type="number" id="arrayValue" placeholder="Enter value">
            <input type="number" id="arrayIndex" placeholder="Index (optional)">
            <button class="btn btn-success" id="insertBtn">Insert</button>
            <button class="btn btn-danger" id="deleteBtn">Delete</button>
            <button class="btn btn-warning" id="clearBtn">Clear</button>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const arrayContainer = document.getElementById("arrayContainer");
            const insertBtn = document.getElementById("insertBtn");
            const deleteBtn = document.getElementById("deleteBtn");
            const clearBtn = document.getElementById("clearBtn");

            insertBtn.addEventListener("click", function () {
                const value = document.getElementById("arrayValue").value.trim();
                const index = document.getElementById("arrayIndex").value.trim();

                if (value === "") return;

                const newElement = document.createElement("div");
                newElement.className = "array-element";
                newElement.textContent = value;

                if (index === "") {
                    arrayContainer.appendChild(newElement);
                } else {
                    const idx = parseInt(index);
                    if (idx >= 0 && idx <= arrayContainer.children.length) {
                        arrayContainer.insertBefore(newElement, arrayContainer.children[idx]);
                    }
                }

                document.getElementById("arrayValue").value = "";
                document.getElementById("arrayIndex").value = "";
            });

            deleteBtn.addEventListener("click", function () {
                const index = document.getElementById("arrayIndex").value.trim();
                if (index === "") return;

                const idx = parseInt(index);
                if (idx >= 0 && idx < arrayContainer.children.length) {
                    arrayContainer.removeChild(arrayContainer.children[idx]);
                }

                document.getElementById("arrayIndex").value = "";
            });

            clearBtn.addEventListener("click", function () {
                arrayContainer.innerHTML = "";
            });
        });
    </script>
</body>
</html>

