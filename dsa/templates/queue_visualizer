            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
        }

        .back-button:hover {
            background-color: #0056b3;
        }

        .queue-container {
            display: flex;
            justify-content: center;
            align-items: flex-end;
            flex-wrap: wrap;
            margin-top: 20px;
            min-height: 120px;
        }

        .queue-element {
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            margin: 5px;
            border-radius: 8px;
            font-size: 18px;
            min-width: 60px;
            text-align: center;
            animation: enqueueAnim 0.4s ease-in;
        }

        @keyframes enqueueAnim {
            from { transform: scale(0.7); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        @keyframes dequeueAnim {
            from { transform: translateX(0); opacity: 1; }
            to { transform: translateX(100%); opacity: 0; }
        }

        .controls {
            margin-top: 30px;
        }
        .controls input {
            width: 150px;
            margin: 5px;
            padding: 12px;
            border-radius: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
        }
        .controls button {
            margin: 5px;
            padding: 12px 25px;
            font-size: 18px;
            border-radius: 8px;
            border: none;
        }

        .front-pointer {
            font-weight: bold;
