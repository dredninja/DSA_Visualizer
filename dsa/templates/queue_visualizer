<body>

    <div class="container">
        <a href="{% url 'datastructures' %}" class="back-button">Back to Data Structures</a>

        <h2>Queue Visualizer</h2>

        <div class="queue-container" id="queueContainer"></div>

        <div class="front-pointer" id="frontPointer" style="display: none;">
            Front â†’ <span id="frontValue"></span>
        </div>

        <div class="controls">
            <input type="number" id="valueInput" placeholder="Value">
            <button class="btn btn-success" id="enqueueBtn">Enqueue</button>
            <button class="btn btn-danger" id="dequeueBtn">Dequeue</button>
            <button class="btn btn-warning" id="clearBtn">Clear</button>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const queueContainer = document.getElementById("queueContainer");
            const enqueueButton = document.getElementById("enqueueBtn");
            const dequeueButton = document.getElementById("dequeueBtn");
            const clearButton = document.getElementById("clearBtn");
            const frontPointer = document.getElementById("frontPointer");
            const frontValue = document.getElementById("frontValue");

            function updateFrontPointer() {
                const elements = queueContainer.getElementsByClassName("queue-element");
                if (elements.length > 0) {
                    frontPointer.style.display = "block";
                    frontValue.textContent = elements[0].textContent;
                } else {
                    frontPointer.style.display = "none";
                }
            }

            enqueueButton.addEventListener("click", function () {
                const input = document.getElementById("valueInput").value.trim();
                if (input === "") return;

                const element = document.createElement("div");
                element.classList.add("queue-element");
                element.textContent = input;
                queueContainer.appendChild(element);
                document.getElementById("valueInput").value = "";
                updateFrontPointer();
            });

            dequeueButton.addEventListener("click", function () {
                const elements = queueContainer.getElementsByClassName("queue-element");
                if (elements.length > 0) {
                    const first = elements[0];
                    first.style.animation = "dequeueAnim 0.4s forwards";
                    setTimeout(() => {
                        first.remove();
                        updateFrontPointer();
                    }, 400);
                }
            });

            clearButton.addEventListener("click", function () {
                queueContainer.innerHTML = "";
                updateFrontPointer();
            });

            updateFrontPointer();
        });
    </script>
</body>
